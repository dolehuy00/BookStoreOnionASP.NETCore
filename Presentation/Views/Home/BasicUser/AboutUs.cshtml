@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="bg-primary text-white text-center py-5">
    <h1>About Us</h1>
    <p>Your trusted source for quality books</p>
</div>

<section class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2>Our Story</h2>
            <p>We started our journey with a passion for books and a mission to make reading accessible to everyone. Our bookstore offers a wide variety of books from different genres, ensuring that every reader finds something they love.</p>
        </div>
        <div class="col-md-6">
            <img src="https://via.placeholder.com/500x300" class="img-fluid rounded" alt="Bookstore image">
        </div>
    </div>
</section>

<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center">Why Choose Us?</h2>
        <div class="row text-center mt-4">
            <div class="col-md-4">
                <h4>Wide Selection</h4>
                <p>Thousands of books across multiple genres.</p>
            </div>
            <div class="col-md-4">
                <h4>Fast Shipping</h4>
                <p>Quick and reliable delivery to your doorstep.</p>
            </div>
            <div class="col-md-4">
                <h4>Customer Support</h4>
                <p>We are here to help you 24/7.</p>
            </div>
        </div>
    </div>
</section>

